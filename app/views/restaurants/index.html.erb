<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>address</th>
      <th>tel</th>
      <th>cuisine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category.capitalize %></td>
        <td><%= link_to 'Show', restaurant, class: "btn btn-primary" %><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-primary" %><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %>
